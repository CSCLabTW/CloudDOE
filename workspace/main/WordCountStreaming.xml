<?xml version="1.0" encoding="UTF-8"?>
<CloudDOE xmlns="http://clouddoe.iis.sinica.edu.tw/confXML">
	<program>
		<name>WordCount Streaming</name>
		<streaming>true</streaming>
		<jarfile>/opt/hadoop/contrib/streaming/hadoop-streaming-0.20.203.0.jar</jarfile>
		<version>20140213</version>
		<author>Hadoop Team</author>
		<lastupd>2014/02/13</lastupd>
		<website>http://wiki.apache.org/hadoop/WordCount</website>
		<argformat>$input $output $mapper $reducer $file $file &gt;&amp; $work/wcstream.log</argformat>
	</program>
	<parameters>
		<parameter>
			<label>Input</label>
			<arg>-input</arg>
			<value>/README</value>
			<type>input</type>
			<editable>true</editable>
		</parameter>
		<parameter>
			<label>Output</label>
			<arg>-output</arg>
			<value>/WCStream</value>
			<type>output</type>
			<editable>false</editable>
		</parameter>
		<parameter>
			<label>Work</label>
			<arg></arg>
			<value>/</value>
			<type>work</type>
			<editable>false</editable>
		</parameter>
		<parameter>
			<label>Mapper class</label>
			<arg>-mapper</arg>
			<value>/WCSmapper.py</value>
			<type>mapper</type>
			<editable>false</editable>
		</parameter>
		<parameter>
			<label>Mapper file</label>
			<arg>-file</arg>
			<value>/WCSmapper.py</value>
			<type>file</type>
			<editable>false</editable>
		</parameter>
		<parameter>
			<label>Reducer class</label>
			<arg>-reducer</arg>
			<value>/WCSreducer.py</value>
			<type>reducer</type>
			<editable>false</editable>
		</parameter>
		<parameter>
			<label>Reducer file</label>
			<arg>-file</arg>
			<value>/WCSreducer.py</value>
			<type>file</type>
			<editable>false</editable>
		</parameter>
	</parameters>
	<logs>
		<log>
			<name>wcstream.log</name>
			<type>detail</type>
		</log>
	</logs>
	<downloads>
		<download>
			<method>getmerge</method>
			<src>/WCStream</src>
			<dst>result</dst>
		</download>
	</downloads>
</CloudDOE>
